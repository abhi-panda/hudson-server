include mixins

doctype
html( lang="en" )
    head
        title Hudson API Base
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        meta( name='description', content='Hudson API ' )
        //- Bootswatch Theme
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
        

    body(style="padding-bottom:10rem;")
        .container
          +nav("Hudson API Base", "Topics")
            +nav_item_dropdown( "#" )( label="Dropdown")
                +nav_header Topics
                +nav_divider
                +nav_item( "#" ) Topic T1
                +nav_item( "#" ) Topic T2
                +nav_item( "#" ) Topic T3
                +nav_item( "#" ) Topic T4
                +nav_item( "#" ) Topic T5
            
          .row.justify-content-center
            .col-md-12.text-center
              span.display-1.d-block Hudson API Base
              .mb-4.lead Please select the appropriate topic from the dropdown to see the List of top Ideas
          #content
            block result
        script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
        script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )